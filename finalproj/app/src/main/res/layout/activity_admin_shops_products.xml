<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminShopsProducts">

    <TextView
        android:id="@+id/adminMenuHomeLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Return to shops"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/admin_ViewShopsProductsRV"
        app:layout_constraintStart_toStartOf="@+id/admin_ViewShopsProductsRV"
        app:layout_constraintTop_toBottomOf="@+id/admin_ViewShopsProductsRV" />

    <TextView
        android:id="@+id/adminMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Product List"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_ViewShopsProductsRV"
        android:layout_width="329dp"
        android:layout_height="549dp"
        android:background="@drawable/recyclerbg"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/adminMenuTitle"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/adminMenuTitle"
        app:layout_constraintTop_toBottomOf="@+id/adminMenuTitle"
        app:layout_constraintVertical_bias="0.165" />

</androidx.constraintlayout.widget.ConstraintLayout>