<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminViewShops">

    <TextView
        android:id="@+id/shopsAdminHomeLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/back"
        android:drawablePadding="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Return to home screen"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/admin_ViewShops"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/admin_ViewShops"
        app:layout_constraintTop_toBottomOf="@+id/admin_ViewShops" />

    <TextView
        android:drawableLeft="@drawable/storebig2"
        android:drawablePadding="5dp"
        android:fontFamily="@font/poppins_bold"
        android:id="@+id/shopsAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shops"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_ViewShops"
        android:layout_width="329dp"
        android:layout_height="549dp"
        android:background="@drawable/recyclerbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shopsAdminTitle"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/shopsAdminTitle"
        app:layout_constraintTop_toBottomOf="@+id/shopsAdminTitle"
        app:layout_constraintVertical_bias="0.165" />

</androidx.constraintlayout.widget.ConstraintLayout>