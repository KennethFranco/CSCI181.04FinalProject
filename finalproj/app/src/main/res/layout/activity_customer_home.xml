<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerHome">

    <TextView
        android:id="@+id/customerHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Choose an option"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />

    <Button
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/customerHomeOrdersHistoryButton"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:background="@drawable/standard_button"
        android:includeFontPadding="false"
        android:text="Orders history"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#3B8AFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerHomeCartButton"
        app:layout_constraintVertical_bias="0.047" />

    <Button
        android:id="@+id/customerHomeShopsButton"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:background="@drawable/standard_button"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:text="Shops"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#3B8AFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerHomeTitle"
        app:layout_constraintVertical_bias="0.067" />

    <Button
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/customerHomeAccountButton"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:background="@drawable/standard_button"
        android:includeFontPadding="false"
        android:text="Account"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#3B8AFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerHomeOrdersHistoryButton"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/customerHomeCartButton"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:background="@drawable/standard_button"
        android:includeFontPadding="false"
        android:text="Cart"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#3B8AFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerHomeShopsButton"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/customerHomeSignOutButton"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:background="@drawable/standard_button"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:text="Sign out"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#3B8AFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerHomeAccountButton"
        app:layout_constraintVertical_bias="0.457" />
</androidx.constraintlayout.widget.ConstraintLayout>