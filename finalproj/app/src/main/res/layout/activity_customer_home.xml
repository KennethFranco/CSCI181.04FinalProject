<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerHome">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/foregroundcustomer"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/shortmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="What would you like to do?"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/customerHomeTitle"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/customerHomeTitle"
        app:layout_constraintTop_toBottomOf="@+id/customerHomeTitle" />

    <TextView
        android:id="@+id/customerHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Welcome!"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <Button
        android:id="@+id/customerHomeOrdersHistoryButton"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/standard_button"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:text="Orders history"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#3B8AFF"
        app:layout_constraintEnd_toEndOf="@+id/customerHomeCartButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/customerHomeCartButton"
        app:layout_constraintTop_toBottomOf="@+id/customerHomeCartButton" />

    <Button
        android:id="@+id/customerHomeShopsButton"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/standard_button"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:text="Shops"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#3B8AFF"
        app:layout_constraintEnd_toEndOf="@+id/shortmsg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/shortmsg"
        app:layout_constraintTop_toBottomOf="@+id/shortmsg" />

    <Button
        android:id="@+id/customerHomeAccountButton"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/standard_button"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:text="Account"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#3B8AFF"
        app:layout_constraintEnd_toEndOf="@+id/customerHomeOrdersHistoryButton"
        app:layout_constraintStart_toStartOf="@+id/customerHomeOrdersHistoryButton"
        app:layout_constraintTop_toBottomOf="@+id/customerHomeOrdersHistoryButton" />

    <Button
        android:id="@+id/customerHomeCartButton"
        android:layout_width="190dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/standard_button"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:text="Cart"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#3B8AFF"
        app:layout_constraintEnd_toEndOf="@+id/customerHomeShopsButton"
        app:layout_constraintStart_toStartOf="@+id/customerHomeShopsButton"
        app:layout_constraintTop_toBottomOf="@+id/customerHomeShopsButton" />

    <Button
        android:id="@+id/customerHomeSignOutButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="0.5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>